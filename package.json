{
    "name": "php-class-generator",
    "displayName": "PHP Class Generator",
    "description": "Generate class/interface/trait out of file path",
    "version": "0.0.5",
    "publisher": "ctf0",
    "engines": {
        "vscode": "^1.34.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:composer.json",
        "onLanguage:php"
    ],
    "repository": "https://github.com/ctf0/vscode-php-class-generator",
    "main": "./extension",
    "contributes": {
        "menus": {
            "explorer/context": [
                {
                    "command": "phpclassgen.generate_class",
                    "when": "explorerResourceIsFolder",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.generate_interface",
                    "when": "explorerResourceIsFolder",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.generate_trait",
                    "when": "explorerResourceIsFolder",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.generate_enum",
                    "when": "explorerResourceIsFolder",
                    "group": "phpclassgen"
                }
            ],
            "commandPalette": [
                {
                    "command": "phpclassgen.generate_class",
                    "when": "editorIsOpen"
                },
                {
                    "command": "phpclassgen.generate_interface",
                    "when": "editorIsOpen"
                },
                {
                    "command": "phpclassgen.generate_trait",
                    "when": "editorIsOpen"
                },
                {
                    "command": "phpclassgen.generate_enum",
                    "when": "editorIsOpen"
                }
            ]
        },
        "commands": [
            {
                "command": "phpclassgen.generate_class",
                "title": "Generate PHP Class"
            },
            {
                "command": "phpclassgen.generate_interface",
                "title": "Generate PHP Interface"
            },
            {
                "command": "phpclassgen.generate_trait",
                "title": "Generate PHP Trait"
            },
            {
                "command": "phpclassgen.generate_enum",
                "title": "Generate PHP Enum"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.3.1",
        "vscode": "^1.1.28",
        "eslint": "^5.13.0",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    }
}
