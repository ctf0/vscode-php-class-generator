{
    "name": "php-class-generator",
    "displayName": "PHP Class Generator",
    "description": "Generate class/interface/trait out of file path",
    "version": "0.1.0",
    "publisher": "ctf0",
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:composer.json",
        "onLanguage:php"
    ],
    "repository": "https://github.com/ctf0/vscode-php-class-generator",
    "main": "./extension",
    "contributes": {
        "menus": {
            "explorer/context": [
                {
                    "command": "phpclassgen.generate_class",
                    "when": "explorerResourceIsFolder",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.generate_interface",
                    "when": "explorerResourceIsFolder",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.generate_trait",
                    "when": "explorerResourceIsFolder",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.generate_enum",
                    "when": "explorerResourceIsFolder",
                    "group": "phpclassgen"
                }
            ],
            "commandPalette": [
                {
                    "command": "phpclassgen.generate_class",
                    "when": "editorIsOpen"
                },
                {
                    "command": "phpclassgen.generate_interface",
                    "when": "editorIsOpen"
                },
                {
                    "command": "phpclassgen.generate_trait",
                    "when": "editorIsOpen"
                },
                {
                    "command": "phpclassgen.generate_enum",
                    "when": "editorIsOpen"
                }
            ]
        },
        "commands": [
            {
                "command": "phpclassgen.generate_class",
                "title": "Generate PHP Class"
            },
            {
                "command": "phpclassgen.generate_interface",
                "title": "Generate PHP Interface"
            },
            {
                "command": "phpclassgen.generate_trait",
                "title": "Generate PHP Trait"
            },
            {
                "command": "phpclassgen.generate_enum",
                "title": "Generate PHP Enum"
            }
        ]
    },
    "devDependencies": {
        "@types/vscode": "^1.68.0",
        "@types/node": "^18.11.4"
    },
    "dependencies": {
        "titlecase": "^1.1.3"
    },
    "extensionDependencies": [
        "ctf0.php-namespace-resolver"
    ]
}
