{
    "name": "php-class-generator",
    "displayName": "PHP Class Generator",
    "description": "Generate class/interface/trait/enum/test out of file path",
    "version": "0.4.6",
    "publisher": "ctf0",
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:composer.json",
        "onStartupFinished"
    ],
    "repository": "https://github.com/ctf0/vscode-php-class-generator",
    "main": "./out/main",
    "contributes": {
        "menus": {
            "explorer/context": [
                {
                    "command": "phpclassgen.generate_class",
                    "when": "explorerResourceIsFolder",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.generate_interface",
                    "when": "explorerResourceIsFolder",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.generate_trait",
                    "when": "explorerResourceIsFolder",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.generate_enum",
                    "when": "explorerResourceIsFolder",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.generate_test_for_file",
                    "when": "!explorerResourceIsFolder && resourceFilename =~ /((?<!blade).php$)/",
                    "group": "phpclassgen"
                }
            ],
            "editor/context": [
                {
                    "command": "phpclassgen.generate_class",
                    "when": "editorLangId == php",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.generate_interface",
                    "when": "editorLangId == php",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.generate_trait",
                    "when": "editorLangId == php",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.generate_enum",
                    "when": "editorLangId == php",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.generate_test_for_file",
                    "when": "editorLangId == php",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.extract_to_function",
                    "when": "editorLangId == php && editorHasSelection && !editorHasMultipleSelections",
                    "group": "phpclassgen"
                },
                {
                    "command": "phpclassgen.extract_to_property",
                    "when": "editorLangId == php && editorHasSelection",
                    "group": "phpclassgen"
                }
            ],
            "commandPalette": [
                {
                    "command": "phpclassgen.generate_class",
                    "when": "editorLangId == php"
                },
                {
                    "command": "phpclassgen.generate_interface",
                    "when": "editorLangId == php"
                },
                {
                    "command": "phpclassgen.generate_trait",
                    "when": "editorLangId == php"
                },
                {
                    "command": "phpclassgen.generate_enum",
                    "when": "editorLangId == php"
                },
                {
                    "command": "phpclassgen.generate_test_for_file",
                    "when": "editorLangId == php"
                },
                {
                    "command": "phpclassgen.extract_to_function",
                    "when": "editorLangId == php && editorHasSelection && !editorHasMultipleSelections"
                },
                {
                    "command": "phpclassgen.extract_to_property",
                    "when": "editorLangId == php && editorHasSelection"
                }
            ]
        },
        "commands": [
            {
                "command": "phpclassgen.generate_class",
                "title": "Generate PHP Class",
                "category": "PHP Class Generator"
            },
            {
                "command": "phpclassgen.generate_interface",
                "title": "Generate PHP Interface",
                "category": "PHP Class Generator"
            },
            {
                "command": "phpclassgen.generate_trait",
                "title": "Generate PHP Trait",
                "category": "PHP Class Generator"
            },
            {
                "command": "phpclassgen.generate_enum",
                "title": "Generate PHP Enum",
                "category": "PHP Class Generator"
            },
            {
                "command": "phpclassgen.generate_test_for_file",
                "title": "Generate PHP Test",
                "category": "PHP Class Generator"
            },
            {
                "command": "phpclassgen.extract_to_function",
                "title": "Extract To Method/Function",
                "category": "PHP Class Generator"
            },
            {
                "command": "phpclassgen.extract_to_property",
                "title": "Extract To Property",
                "category": "PHP Class Generator"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "PHP Class Generator",
            "properties": {
                "phpClassGenerator.testTypes": {
                    "type": "array",
                    "default": [
                        "Integration",
                        "Feature",
                        "Unit"
                    ],
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "uniqueItems": true
                },
                "phpClassGenerator.testFolderName": {
                    "type": "string",
                    "default": "Tests",
                    "description": "the folder name search is case-insensitive, so (tests or Tests) is the same"
                },
                "phpClassGenerator.showCodeLens": {
                    "type": "boolean",
                    "default": true,
                    "description": "show go to test code lens"
                },
                "phpClassGenerator.extractFunctionDoc": {
                    "type": "boolean",
                    "default": true,
                    "description": "add generic docblock to extract function results"
                },
                "phpClassGenerator.enableCodeActions": {
                    "type": "boolean",
                    "default": true,
                    "description": "enable code actions"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --pure:console.log --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "watch": "npm run esbuild"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.1",
        "@types/node": "^18.13.0",
        "@types/vscode": "^1.68.0",
        "esbuild": "^0.17.7",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "escape-string-regexp": "^5.0.0",
        "fast-glob": "^3.2.12",
        "find-up": "^6.3.0",
        "fs-extra": "^11.1.0",
        "pascal-case": "^3.1.2",
        "php-parser": "^3.1.3",
        "replace-in-file": "^6.3.5"
    },
    "extensionDependencies": [
        "ctf0.php-namespace-resolver"
    ]
}
